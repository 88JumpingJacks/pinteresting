source 'https://rubygems.org'

gem 'rails', '4.1.6'
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'spring',        group: :development
gem 'bootstrap-sass'

# Only need to use following gems in development and test
group :development, :test do
	gem 'sqlite3'
end

# Use following gems when we're in production
group :production do
	gem 'pg'
	gem 'rails_12factor'
end

group :doc do
	gem 'sdoc', require: false
end


